Host *

# Forward ssh agent to the remote machine.
ForwardAgent yes

# Automatically add all common hosts to the host file as they are connected to.
StrictHostKeyChecking no

# finally, you can check your saved keys
#    ssh-add -l

# then, add these two keys as following
#   ssh-add ~/.ssh/id_rsa_jexchan

Host github.com-ronaldocpontes
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_rsa

Host github.com-gsc-dev
    HostName github.com
    User git
	IdentityFile ~/.ssh/github_rsa.pub_gsc

Host github.gamesys.co.uk-ronaldo.pontes
    HostName github.gamesys.co.uk
    User git
    IdentityFile ~/.ssh/id_rsa

Host gsc
    HostName github.com
    User git
    IdentityFile ~/.ssh/github_rsa.pub_gsc

Host gsc-lab
    HostName gitlab.com
    User git
	IdentityFile ~/.ssh/id_rsa
